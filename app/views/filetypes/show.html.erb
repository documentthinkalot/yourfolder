<p id="notice"><%= notice %></p>

<h3><%= @filetype.name %> のアイテム
<br><% @filetype.filetype2s.each do |filetype2| %>
<%= link_to filetype2_path(id: filetype2.id) do %><span class="label label-default"><%= filetype2.filetype2_name %></span><% end %>
<% end %>
</h3>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-6 col-md-3 post">
      <div class="thumbnail">
        <div class="caption">
          <div style="height:200px;">
            <% if post.file? %>
              <%= link_to post do %>
                <img src=<%= post.file.url+".jpg" %> alt="image" style="position: absolute; top: 20px; bottom: 0; left: 0; right: 0; margin: 0 auto; max-width:80%; max-height:180px;">
                <% end %>
            <% else %>
              <%= link_to post do %>
                <div style="width:100%; height:180px; border:1px solid #e3e3e3;"><p style="text-align: center; line-height: 180px;">ファイルはありません</p></div>
              <% end %>
            <% end %>
          </div>
          <h4>
            <p style="height:55px; font-size:10pt;"><strong><%= post.title.truncate(32, omission: '......') %></strong>
            <br><%= link_to filetype_path(id: post.filetype.id) do %><span class="label label-default"><%= post.filetype.name %></span><% end %>
            </p>
          </h4>
          <p style="height:80px; font-size: 9pt;"><%= post.body.truncate(66, omission: '......') %></p>
          <hr>
          <div class="post_info"><i class="fa fa-comments fa-lg" aria-hidden="true"></i> <%= post.comments.length %></div>
          <%= link_to post do %><div class="btn btn-default" role="button">もっと見る &raquo;</div><% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="pagenation"><%= paginate @posts %></div>
