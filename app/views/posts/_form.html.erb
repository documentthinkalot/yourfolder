<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="field">
    <%= f.label :title, 'タイトル' %><br>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :filetype_id, 'ファイル種別' %><br />
    <%= f.select :filetype_id, nested_dropdown(Filetype.all.arrange), {}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, 'カテゴリ' %><br />
    <%= f.select :category_id, nested_dropdown(Category.all.arrange), {}, {class: 'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :body, '本文' %><br>
    <%= f.text_area :body, class:"form-control", size:'50x15'  %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-default">送信</button>
  </div>
<% end %>
