<p id="notice"><%= notice %></p>

<h3><%= @user.nickname %>のアップロードしたアイテム</h3>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-6 col-md-3 post">
      <div class="thumbnail">
        <div class="caption">
          <img src="..." alt="image">
          <h4><strong><%= post.title %></strong>
          <%= link_to filetype_path(id: post.filetype.id) do %><span class="label label-default"><%= post.filetype.name %></span><% end %></h4>
          <p><%= post.body %></p>
          <%= link_to post do %><div class="btn btn-default" role="button">もっと見る &raquo;</div><% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
