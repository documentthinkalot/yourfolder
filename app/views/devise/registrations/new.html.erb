<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :nickname, 'ユーザー名' %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, 'E-mail' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード確認' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :sex, '性別' %><br />
    <%= f.select :sex, options_for_select(["男性","女性"]), autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :age, '年齢' %><br />
    <%= f.text_field :age, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :place, '居住地' %><br />
    <%= f.collection_select :place_id, Place.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :company, '会社名' %><br />
    <%= f.text_field :company, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :industry, '業種' %><br />
    <%= f.collection_select :industry_id, Industry.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :occupation, '職種' %><br />
    <%= f.collection_select :occupation_id, Occupation.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :position, '役職' %><br />
    <%= f.select :position, options_for_select(["従業員", "係長相当", "課長相当", "部長相当", "役員相当", "代表"]), autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :number_of_employees, '従業員の数' %><br />
    <%= f.select :number_of_employees, options_for_select(["10名以下",  "100名以下", "1000名以下", "10000名以下", "10000名以上"]), autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :circumstances, 'このサイトを知ったきっかけ' %><br />
    <%= f.select :circumstances, options_for_select(["知人の紹介", "相互リンク", "キュレーションサイト", "検索エンジンで直接ヒット"]), autofocus: true %>
  </div>


  <div class="actions">
    <%= f.submit "サインアップ" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
