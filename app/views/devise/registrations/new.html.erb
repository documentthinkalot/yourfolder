<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', default: 'Sign up') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :nickname, 'ユーザー名' %><br />
        <%= f.text_field :nickname, autofocus: true, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :sex, '性別' %><br />
        <%= f.select :sex, options_for_select(["男性","女性"]), {prompt:"選択してください"}, { autofocus: 'true', class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :age, '年齢（半角数字）' %><br />
        <%= f.text_field :age, autofocus: true, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :place, '勤め先の場所' %><br />
        <%= f.collection_select :place_id, Place.all, :id, :name, {prompt:"選択してください"}, { autofocus: 'true', class: 'form-control'}  %>
      </div>
      <div class="form-group">
        <%= f.label :company, '会社名（任意）' %><br />
        <p style="font-size:10pt;">※本件に関し会社様に御連絡することはございません。
        <br>当プラットフォームの利用実態の把握に利用させていただきます。</p>
        <%= f.text_field :company, autofocus: true, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :industry, '業種' %><br />
        <%= f.collection_select :industry_id, Industry.all, :id, :name, {prompt:"選択してください"}, { autofocus: 'true', class: 'form-control'}  %>
      </div>
      <div class="form-group">
        <%= f.label :occupation, '職種' %><br />
        <%= f.collection_select :occupation_id, Occupation.all, :id, :name, {prompt:"選択してください"}, { autofocus: 'true', class: 'form-control'}  %>
      </div>
      <div class="form-group">
        <%= f.label :position, '役職' %><br />
        <%= f.select :position, options_for_select(["従業員", "係長相当", "課長相当", "部長相当", "役員相当", "代表"]), {prompt:"選択してください"}, { autofocus: 'true', class: 'form-control'}  %>
      </div>
      <div class="form-group">
        <%= f.label :number_of_employees, '従業員の数' %><br />
        <%= f.select :number_of_employees, options_for_select(["10名以下",  "100名以下", "1000名以下", "10000名以下", "10000名以上"]), {prompt:"選択してください"}, { autofocus: 'true', class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :circumstances, 'このサイトを知ったきっかけ' %><br />
        <%= f.select :circumstances, options_for_select(["知人の紹介", "相互リンク", "キュレーションサイト", "検索エンジンで直接ヒット"]), {prompt:"選択してください"}, { autofocus: 'true', class: 'form-control'}  %>
      </div>
      <div class="form-group">
        <%= f.label :biography, '自己紹介' %><br />
        <%= f.text_field :biography, autofocus: true, class: 'form-control'  %>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
