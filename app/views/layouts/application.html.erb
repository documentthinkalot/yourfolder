<!DOCTYPE html>
<html>
<head>
  <title>Business Knowledge Platform</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">


</head>
 <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">BKP</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/">About</a></li>
            <li class="dropdown">
              <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">MENU<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to requests_path do %><i class="fa fa-share-square-o" aria-hidden="true"></i> 共有リクエスト<% end %></li>
                <li><a href="/"><i class="fa fa-at" aria-hidden="true"></i> コンタクト</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-search" aria-hidden="true"></i> アイテムを探す<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li class="dropdown-header">ジャンル</li>
                <li><%= link_to posts_path do %>全てのアイテム<% end %></li>
                <% Filetype.all.each do |filetype| %>
                  <li><%= link_to filetype_path(id: filetype.id) do %><%= filetype.name %><% end %></li>
                <% end %>
                <li role="separator" class="divider"></li>
                <li class="dropdown-header">特集</li>
                <li><a href="/">新着記事</a></li>
                <li><a href="/">人気ランキング</a></li>
              </ul>
            </li>
          </ul>
          <form class="navbar-form navbar-left" role="search">
            <%= form_tag(posts_path, method:'get') do %>
              <div class="form-group">
                <%= text_field_tag :search, params[:search], size:'33', placeholder:"キーワードを入力してください", class:'form-control' %>
                <button type="submit" class="btn btn-default">Search</button>
              </div>
            <% end %>
          </form>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to new_post_path, :style=>"text-decoration:none;" do %><i class="fa fa-upload" aria-hidden="true"></i> アップロード<% end %></li>
              <li class="dropdown">
              <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-circle" aria-hidden="true"></i> <%= current_user.nickname %><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to info_user_path(current_user) do %>アカウント情報<% end %></li>
                <li><%= link_to user_path(current_user) do %>アップロードしたアイテム<% end %></li>
                <li><%= link_to likes_user_url(current_user) do %>お気に入りのアイテム<% end %>
                </li>
                <li role="separator" class="divider"></li>
                <li class="dropdown-header">設定</li>
                <li><%= link_to edit_user_registration_path,:style=>"text-decoration:none;" do %>アカウント情報の変更<% end %></li>
              </ul>
            </li>
              <li><%= link_to destroy_user_session_path, method: :delete, :style=>"text-decoration:none;" do %><i class="fa fa-sign-out" aria-hidden="true"></i> ログアウト<% end %></li>
            <% else %>
              <li><%= link_to new_user_session_path, :style=>"text-decoration:none;" do %><i class="fa fa-upload" aria-hidden="true"></i> アップロード<% end %></li>
              <li><%= link_to new_user_session_path, :style=>"text-decoration:none;" do %><i class="fa fa-sign-in" aria-hidden="true"></i> ログイン<% end %></li>
              <li><%= link_to new_user_registration_path,:style=>"text-decoration:none;" do %><i class="fa fa-user-plus" aria-hidden="true"></i> アカウント作成<% end %></li>
            <% end %>
            <!-- <li class="active"><a href="/">Fixed top <span class="sr-only">(current)</span></a></li> -->
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->

    <div class="container">
      <div class="main">
        <div class="row">
          <div class="left_content col-lg-2">
            <h3>クイックメニュー</h3>
            <div class="panel panel-default">
              <div class="list-group">
                <a class="list-group-item" href="/"><i class="fa fa-home" aria-hidden="true"></i> ホーム</a>
                <% if user_signed_in? %>
                <% else %>
                  <%= link_to new_user_session_path, :style=>"text-decoration:none;", class:"list-group-item" do %><i class="fa fa-sign-in" aria-hidden="true"></i> ログイン<% end %>
                  <%= link_to new_user_registration_path,:style=>"text-decoration:none;", class:"list-group-item" do %><i class="fa fa-user-plus" aria-hidden="true"></i> アカウント作成<% end %>
                <% end %>
                <a class="list-group-item" href="#"><i class="fa fa-search" aria-hidden="true"></i> アイテムを探す</a>
                <% if user_signed_in? %>
                  <%= link_to new_post_path, :style=>"text-decoration:none;", class:"list-group-item" do %><i class="fa fa-upload" aria-hidden="true"></i> アップロード<% end %>
                <% else %>
                  <%= link_to new_user_session_path, :style=>"text-decoration:none;", class:"list-group-item" do %><i class="fa fa-upload" aria-hidden="true"></i> アップロード<% end %>
                <% end %>
                <%= link_to requests_path, class:"list-group-item" do %><i class="fa fa-share-square-o" aria-hidden="true"></i> 共有リクエスト<% end %>
                <a class="list-group-item" href="#"><i class="fa fa-at" aria-hidden="true"></i> コンタクト</a>
              </div>
            </div>
          </div>
          <div class="right_content col-lg-10">
            <%= yield %>
          </div>
        </div>
      </div>

      <!-- <div id="footer">Copyright © 2017 Business Knowledge Platform All Rights Reserved.
      </div> -->
    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <!-- <script src="../../dist/js/bootstrap.min.js"></script> -->
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
